<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSWiki.View.ExamplePage"
             Title="Beispiele"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <ScrollView>
            <AbsoluteLayout >
                <Label Text="{Binding .}"
                   TextColor="White"
                   AbsoluteLayout.LayoutBounds="0.5,0.5,.95,.95"
                   AbsoluteLayout.LayoutFlags="All"
                   />
            </AbsoluteLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>